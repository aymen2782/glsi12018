<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
    <title>Litste des utilisateurs</title>
</head>
<body>
{% for message in app.session.flashbag.get('init') %}
<div class="alert alert-primary">{{ message }}</div>
{% endfor %}
{% for message in app.session.flashbag.get('error') %}
    <div class="alert alert-danger">{{ message }}</div>
{% endfor %}
{% for message in app.session.flashbag.get('success') %}
    <div class="alert alert-success">{{ message }}</div>
{% endfor %}
<ol class="list-group">
{% for username,user in app.session.get('users') %}
    <li class="list-group-item">{{ username }} : {{ user }}</li>
{% else %}
    <div class="alert alert-info">No user found :' Empty list</div>
{% endfor %}
</ol>
</body>
</html>
